{% extends 'back/base_back.html.twig' %}

{% block title %}Critiques{% endblock %}

{% block body %}
    <h1>Critiques de films</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Content</th>
                <th>Rating</th>
                <th>Reactions</th>
                <th>WatchedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.username }}</td>
                <td>{{ review.email }}</td>
                <td>{{ review.content }}</td>
                <td>{{ review.rating }}</td>
                <td>{{ review.reactions ? review.reactions|json_encode : '' }}</td>
                <td>{{ review.watchedAt ? review.watchedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('back_review_show', {'id': review.id}) }}">show</a>
                    <a class="btn btn-sm btn-success" href="{{ path('back_review_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_review_new') }}">Create new</a>
{% endblock %}
